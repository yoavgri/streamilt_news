# ×˜×¢×™× ×ª ×”× ×ª×•× ×™×
df = get_fake_news()

# **********************************************
## 1. ××ª×—×•×œ ××¦×‘ (Session State) ×œ×©××™×¨×”
# **********************************************
if 'saved_articles' not in st.session_state:
    st.session_state.saved_articles = set() # ×©×™××•×© ×‘-Set ×œ××—×¡×•×Ÿ ××–×”×™ ×”-ID ×”×™×™×—×•×“×™×™×

# ×¤×•× ×§×¦×™×•×ª ×œ×˜×™×¤×•×œ ×‘×©××™×¨×”/×”×¡×¨×” (×›×“×™ ×œ×”×‘×˜×™×— ××ª×—×•×œ ××—×“×© × ×›×•×Ÿ)
def toggle_save_article(article_id):
    if article_id in st.session_state.saved_articles:
        st.session_state.saved_articles.remove(article_id)
    else:
        st.session_state.saved_articles.add(article_id)

# 3. ×‘× ×™×™×ª ×¡×¨×’×œ ×”×¦×“ (Sidebar)
with st.sidebar:
    st.title("ğŸ” ×¡×™× ×•×Ÿ ×•× ×™×•×•×˜")
    
    # ×”×•×¡×¤×ª ×ª×™×‘×ª ×¡×™××•×Ÿ ×œ×”×¦×’×ª ×›×ª×‘×•×ª ×©××•×¨×•×ª ×‘×œ×‘×“
    show_saved_only = st.checkbox("×”×¦×’ ×›×ª×‘×•×ª ×©××•×¨×•×ª ×‘×œ×‘×“", key="show_saved")
    
    st.markdown("---")
    
    # ×¡×™× ×•×Ÿ ×œ×¤×™ ×§×˜×’×•×¨×™×” (××•×¤×™×¢ ×¨×§ ×× ×œ× ××¡× × ×™× ×¨×§ ×›×ª×‘×•×ª ×©××•×¨×•×ª)
    if not show_saved_only:
        category_filter = st.multiselect(
            "×‘×—×¨ ×§×˜×’×•×¨×™×•×ª:",
            options=df["category"].unique(),
            default=df["category"].unique()
        )
    else:
        # ×× ××¦×™×’×™× ×¨×§ ×©××•×¨×™×, ××™×Ÿ ×˜×¢× ×‘×¤×™×œ×˜×¨ ×§×˜×’×•×¨×™×•×ª
        category_filter = df["category"].unique() 
        
    st.markdown("---")
    st.write(f"ğŸ“ ×›×ª×‘×•×ª ×©××•×¨×•×ª: {len(st.session_state.saved_articles)}")
    st.write("×¤×•×ª×— ×‘×××¦×¢×•×ª Python & Streamlit")

# 4. ××™×–×•×¨ ×¨××©×™ - ×›×•×ª×¨×ª ×•×—×™×¤×•×©
st.title("ğŸ“° Â ××ª×¨ ×”×—×“×©×•×ª ×•×¢×“×›×•× ×™× ×©×•×˜×¤×™×")
st.caption("××ª×¨ ×—×“×©×•×ª ×“×™× ×××™ ×œ×“×•×’××”")

# ×©×•×¨×ª ×—×™×¤×•×©
search_query = st.text_input("×—×¤×© ×›×•×ª×¨×ª ××• ×ª×•×›×Ÿ...", "")

# 5. ×œ×•×’×™×§×” ×©×œ ×¡×™× ×•×Ÿ
filtered_df = df

# ×¡×™× ×•×Ÿ ×œ×¤×™ ×›×ª×‘×•×ª ×©××•×¨×•×ª
if st.session_state.get("show_saved"):
    # ×¡×™× ×•×Ÿ ×”-DataFrame ×¨×§ ×œ×›×ª×‘×•×ª ×©×”-ID ×©×œ×”×Ÿ × ××¦× ×‘-st.session_state.saved_articles
    filtered_df = filtered_df[filtered_df["id"].isin(st.session_state.saved_articles)]
    st.header("â­ ×”×›×ª×‘×•×ª ×”×©××•×¨×•×ª ×©×œ×™")
else:
    # ×¡×™× ×•×Ÿ ×¨×’×™×œ ×œ×¤×™ ×§×˜×’×•×¨×™×”
    filtered_df = filtered_df[filtered_df["category"].isin(category_filter)]


if search_query:
    filtered_df = filtered_df[
        filtered_df["title"].str.contains(search_query, case=False) |
        filtered_df["summary"].str.contains(search_query, case=False)
    ]

# 6. ×”×¦×’×ª ×”×›×ª×‘×•×ª
st.markdown("---")

if filtered_df.empty:
    st.warning("×œ× × ××¦××• ×›×ª×‘×•×ª ×”×ª×•×××•×ª ××ª ×”×¡×™× ×•×Ÿ ××• ×”×—×™×¤×•×© ×©×œ×š.")
else:
    # ×œ×•×œ××” ×©×¢×•×‘×¨×ª ×¢×œ ×”×›×ª×‘×•×ª ×•××¦×™×’×” ××•×ª×Ÿ
    for index, row in filtered_df.iterrows():
        article_id = row['id']
        is_saved = article_id in st.session_state.saved_articles
        
        # ×™×¦×™×¨×ª ×§×•× ×˜×™×™× ×¨ ×œ×›×œ ×›×ª×‘×” ×›×“×™ ×œ×©××•×¨ ×¢×œ ×¡×“×¨
        with st.container():
            col1, col2 = st.columns([1, 3]) # ×™×—×¡ ×©×œ 1 ×œ-3 ×‘×™×Ÿ ×ª××•× ×” ×œ×˜×§×¡×˜
            
            with col1:
                st.image(row['image'], width=200)
            
            with col2:
                # ×›×•×ª×¨×ª
                st.subheader(f"{row['title']}")
                
                # ×ª×’×™×•×ª ×§×˜× ×•×ª ××¢×œ ×”×˜×§×¡×˜
                st.markdown(f"**{row['category']}** | ğŸ—“ï¸ {row['date']} | âœï¸ {row['author']}")
                st.write(row["summary"])
                
                # ×™×¦×™×¨×ª ×›×¤×ª×•×¨ ×©××™×¨×” ×œ×™×“ ×›×¤×ª×•×¨ ×§×¨× ×¢×•×“
                save_col, expander_col = st.columns([1, 3])
                
                with save_col:
                    button_text = "â­ ×©××•×¨" if not is_saved else "ğŸ—‘ï¸ ×”×¡×¨ ×©××™×¨×”"
                    st.button(
                        button_text,
                        key=f"save_btn_{article_id}",
                        on_click=toggle_save_article,
                        args=(article_id,),
                        type="primary" if not is_saved else "secondary"
                    )
                
                with expander_col:
                    # ×›×¤×ª×•×¨ "×§×¨× ×¢×•×“" ×©× ×¤×ª×— (Expander)
                    with st.expander("×§×¨× ×¢×•×“"):
                        st.write(row["content"])
            
            st.markdown("---") # ×§×• ××¤×¨×™×“ ×‘×™×Ÿ ×›×ª×‘×•×ª
